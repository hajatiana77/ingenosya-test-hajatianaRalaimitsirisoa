{% extends 'superadmin/base_superadmin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1>{{'Shop choice'|trans}}</h1>
        <form id="form1" action="{{ path('superadminshowgraph')}}" method="POST">   
            <input type="hidden" id="id_pv" name="id_pv" value="" />                                 
             <table class="table">                
                <tbody>
                    <tr>
                        <td>Date1:</td> <td><input type="text" id="datepicker1" name="datepicker1" value=""></td>
                        <td>Date2:</td> <td><input type="text" id="datepicker2" name="datepicker2" value=""></td>
                    </tr>
                </tbody>
             </table>                                                
            
            <table class="table">
                <thead>
                    <tr></tr>                
                        <th>{{'Name'|trans}}</th>                                 
                        <td>{{'Action'|trans}}</td>                             
                    </tr>
                </thead>
                <tbody>                               
                    {% for key, pv in rows %}
                        {% if pv['user'] is not null %}                                  
                            <tr>                                                                         
                                <td>{{ pv['nom_pv'] }}</td>                                                
                                <td>
                                    <!--<a href="{{ path('superadminshowgraph', {'id': pv['id']}) }}" onclick="send_form(); return false;">{{'Show'|trans}}</a>-->
                                    <a href="#" onclick="send_form({{ pv['id'] }}); return false;">{{'Show'|trans}}</a>
                                </td>                        
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">{{'No records found'|trans}}</td>
                            </tr>
                        {% endif %}
                    {% endfor %}        
                </tbody>
            </table>
         </form>   
        <script>
          $( function() {
            $( "#datepicker1" ).datepicker();
            $( "#datepicker2" ).datepicker();
          } );
          
          function send_form(id_pv){
            if(id_pv){
                $('#id_pv').val(id_pv);
            }
            $('#form1').submit();
          }
        </script>
   </div>  
{% endblock %}
