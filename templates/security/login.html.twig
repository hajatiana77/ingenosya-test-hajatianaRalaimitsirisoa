{% extends 'base.html.twig' %}

{% block title %}{{ 'Log in'|trans}}{% endblock %}

{% block head %}
<div class="container-fluid navbarContainer">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link"  href="javascript:void(0)" onclick="alert('En cours de développement!!!')">Foire aux Questions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"  href="javascript:void(0)" onclick="alert('En cours de développement!!!')">Le Mag</a>
                    </li>                   
                </ul>
            </div>
        </nav>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="container-fluid banner">
    <style type="text/css">
        .center{
            margin-left: 5%; width:30%;
        }
        .bottom{
            margin-bottom: 30px;
        }
    </style>
    <div class="center">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
        
            <h1 class="h3 mb-3 font-weight-normal">{{'Please sign in'|trans}}</h1>
            <label for="inputUsername">{{'Username'|trans}}</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
            <label for="inputPassword">{{'Password'|trans}}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
        
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}            
            <button class="btn btn-lg btn-primary" type="submit" style="margin-top: 10px;;">{{ 'Sign in'|trans }}</button>
        </form>
    </div>
</div>
<div class="bottom"></div>
{% endblock %}
